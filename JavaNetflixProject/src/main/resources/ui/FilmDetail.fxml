<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #141414;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.JavaProject.JavaNetflixProject.app.FilmDetailController">
    
    <top>
        <HBox alignment="CENTER_LEFT" style="-fx-background-color: #141414;">
            <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
            <Button onAction="#goBack" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16;" text="‹ Back" />
            <Region HBox.hgrow="ALWAYS" />
            <Label style="-fx-text-fill: #E50914; -fx-font-size: 24; -fx-font-weight: bold;" text="J-Stream" />
        </HBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: #141414;">
            <VBox spacing="30" style="-fx-background-color: #141414;">
                
                <!-- Hero Section -->
                <HBox alignment="TOP_LEFT" spacing="30" style="-fx-background-color: #1a1a1a;">
                    <padding><Insets bottom="30" left="50" right="50" top="30" /></padding>
                    
                    <!-- Poster Image -->
                    <ImageView fx:id="posterImage" fitHeight="300" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, black, 20, 0.5, 0, 0);" />
                    
                    <!-- Film Info -->
                    <VBox prefWidth="600" spacing="20">
                        <!-- Title -->
                        <Label fx:id="titleText" style="-fx-text-fill: white; -fx-font-size: 36; -fx-font-weight: bold;" />
                        
                        <!-- Year and Genre -->
                        <HBox spacing="20">
                            <Label fx:id="yearLabel" style="-fx-text-fill: white; -fx-font-size: 16;" />
                            <Label fx:id="genreLabel" style="-fx-text-fill: white; -fx-font-size: 16;" />
                        </HBox>
                        
                        <!-- Description -->
                        <Label fx:id="descriptionText" style="-fx-text-fill: white; -fx-font-size: 14; -fx-wrap-text: true;" />
                        
                        <!-- Action Buttons -->
                        <HBox spacing="15">
                            <Button onAction="#playFilm" style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 16;                                             -fx-font-weight: bold; -fx-padding: 10 30; -fx-min-width: 120; -fx-min-height: 40;" text="▶ Play" />
                            <Button onAction="#addToList" style="-fx-background-color: rgba(109, 109, 110, 0.7); -fx-text-fill: white;                                             -fx-font-size: 16; -fx-padding: 10 20; -fx-min-width: 100; -fx-min-height: 40;" text="+ My List" />
                            <Button fx:id="likeButton" onAction="#toggleLike" style="-fx-background-color: rgba(109, 109, 110, 0.7); -fx-text-fill: white;                                             -fx-font-size: 16; -fx-padding: 10 20; -fx-min-width: 100; -fx-min-height: 40;" text="Like" />
                        </HBox>
                    </VBox>
                </HBox>
                
                <!-- Details Section -->
                <VBox spacing="20" style="-fx-background-color: #141414;">
                    <padding><Insets bottom="30" left="50" right="50" /></padding>
                    
                    <Label style="-fx-text-fill: white; -fx-font-size: 24; -fx-font-weight: bold; -fx-padding: 0 0 10 0;" text="Details" />
                    
                    <VBox spacing="15">
                        <!-- Release Date -->
                        <VBox spacing="3">
                            <Label style="-fx-text-fill: #808080; -fx-font-size: 12; -fx-font-weight: bold;" text="RELEASE DATE" />
                            <Label fx:id="releaseDateLabel" style="-fx-text-fill: white; -fx-font-size: 16;" />
                        </VBox>
                        
                        <!-- Genre -->
                        <VBox spacing="3">
                            <Label style="-fx-text-fill: #808080; -fx-font-size: 12; -fx-font-weight: bold;" text="GENRE" />
                            <Label fx:id="genreFullLabel" style="-fx-text-fill: white; -fx-font-size: 16;" />
                        </VBox>
                        
                        <!-- Description -->
                        <VBox spacing="3">
                            <Label style="-fx-text-fill: #808080; -fx-font-size: 12; -fx-font-weight: bold;" text="DESCRIPTION" />
                            <Label fx:id="fullDescriptionLabel" style="-fx-text-fill: white; -fx-font-size: 14; -fx-wrap-text: true;" />
                        </VBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
